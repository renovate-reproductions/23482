{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "baseBranches": ["main"],
  "extends": [
    "config:base",
    "helpers:pinGitHubActionDigests",
    ":dependencyDashboard"
  ],
  "schedule": [
    "on Friday",
    "every weekend"
  ],
  "timezone": "Europe/Berlin",
  "rebaseWhen": "behind-base-branch",
  "constraints": {
    "npm": "< 7",
    "node": "< 15.0.0"
  }
}
